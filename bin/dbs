#!/bin/sh
# vim: set ft=shell

set -eo pipefail

log ()
{
    echo "[DBS] $1"
}

if [ -z "$(which curl)" ];
then
    log "Missing curl"
    exit 1
fi;

if [ -z "${DOCKER_IMAGE}" ];
then
    log "Required variable \$DOCKER_IMAGE is not defined"
    exit 1
fi;

if [ -z "$1" ];
then
    log "Missing script name"
    exit 1
fi;

randName ()
{
    date | md5sum | head -c8
}

dbsImage ()
{
    # @see https://stackoverflow.com/a/8811800/1053763
    if [ "${1#*:}" != "$1" ];
    then
        echo "$1"
    else
        echo "$1:latest"
    fi;
}

download ()
{
    FROM="$1"
    TO="$2"

    echo "Fetching script from: $FROM"

    if curl -o"$TO" -Lfs "$FROM";
    then
        return 0
    else
        echo "Failed"
        return 1
    fi;
}

runScript ()
{
    FILE_PATH="$1"

    chmod +x "$FILE_PATH"
    $FILE_PATH

    rm "$FILE_PATH"
}

URL="https://raw.githubusercontent.com/radmen/docker-build-scripts/master/scripts"
INSTALL_SCRIPT=$1
DEST="/tmp/$(randName)_${INSTALL_SCRIPT}"
IMAGE=$(dbsImage "$DOCKER_IMAGE")

log "Searching script: $INSTALL_SCRIPT"

if download "${URL}/$(echo "$IMAGE" | tr ':' '/')/${INSTALL_SCRIPT}" "$DEST";
then
    runScript "$DEST"
    exit 0
fi;

if download "${URL}/$(echo "$IMAGE" | cut -d':' -f0)/${INSTALL_SCRIPT}" "$DEST";
then
    runScript "$DEST"
    exit 0
fi;

log "Could not find script"
exit 1
